
<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>标签管理器--一个为您节约时间的网站</title>

    @Styles.Render("~/Tags/CSS")
    
    <!-- Mainly scripts -->
    @Scripts.Render("~/Tags/Js")

</head>

<body>

    <div class="row" style="padding: 30px;">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5><a href="/Home/Index">标签管理器</a></h5>
                    @RenderSection("Tags", required:false)

                    <div class="pull-right">
                        @if (Request.IsAuthenticated)
                        {
                            <a href="/Account/Logout"><i class="fa fa-sign-out"></i> 注销</a>
                        }
                        else
                        {
                            <a href="/Account/Login"><i class="fa fa-sign-in"></i> 登录</a>
                        }
                    </div>
                </div>
                <div class="ibox-content">
                    <div id="HandleDiv" hidden="hidden">
                        <p style="color:red;text-align:center;">正在处理...</p>
                    </div>
                    @RenderBody()
                </div>
                <div class="ibox-footer">
                    <div style="text-align: center; margin: 10px;">
                        © @DateTime.Now.Year Powered by DepingDu
                    </div>
                </div>
            </div>
        </div>
    </div>

    @RenderSection("Scripts", required:false)

    <script type="text/javascript">
        var url = window.location.href;
        if (url.indexOf("https") < 0) {
            url = url.replace("http:", "https:");
            window.location.replace(url);
        }
    </script>
</body>

</html>
